<link rel="stylesheet" href="/css/header.css">

<div id="header">
    <div id="logo">
        <img src="/images/logo.jpg" alt="" style="height: 90%; width: 100%;">
    </div>
    <div id="link">
        <ul id="links">
            <li><a href="/">Home</a></li>
            <li><a href="#abt">About Us</a></li>
            <li><a href="#contact_us">Contact Us</a></li>
        </ul>
    </div>
    <div id="search">
        <input type="text" placeholder="Search for items..." id="search_item" style="height: 70%; width: 100%;">
        <div id="searchoptions">
            <ul>
                <li class="options" id="iphone"><a href="/iphones">iPhone</a></li>
                <li class="options" id="clothing"><a href="">Clothing for Women</a></li>
                <li class="options" id="refrigerator"><a href="">Refrigerator</a></li>
